<% include _layouts/nav_bar%>   
<script>
        function checkforblank(){
            var errormsg ="";

            if (document.getElementById('title').value == ""){
                errormsg += "Enter Title \n";
                document.getElementById('title').style.borderColor="red";
            }

            if (document.getElementById('short_description').value == ""){
                errormsg += "Enter short description \n";
                document.getElementById('short_description').style.borderColor="red";
            }
            if (document.getElementById('long_description').value == ""){
                errormsg += "Enter long description \n";
                document.getElementById('long_description').style.borderColor="red";
            }
            if (document.getElementById('fund_goal').value == ""){
                errormsg += "Enter fund goal \n";
                document.getElementById('fund_goal').style.borderColor="red";
            }
            if (document.getElementById('file').value == ""){
                errormsg += "Enter Cover Photo \n";
               
            }

            if (errormsg != ""){
                alert(errormsg);
                return false;            }           
        }
    </script>


<body>
    <div style="padding: 50px;">
    <h1><%= title %></h1>
    <hr>
    <form method="post" action="/projects/save" autocomplete="off" onsubmit ="return checkforblank()" enctype="multipart/form-data" >
        
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="string" 
            class="form-control"
             id="title" 
             name="title" 
             placeholder="Enter title">
        </div>

        <div class="form-group">
            <label for="short_description">Short Description:</label>
            <input 
            type="string" 
            class="form-control"
            id="short_description" 
            name="short_description" 
            placeholder="Enter Short description">
        </div>
        <div class="form-group">
            <label for="long_description">Long Description:</label>
            <textarea 
            type="string" 
            class="form-control"
            id="long_description" 
            name="long_description" 
            placeholder="Enter Long description">
            </textarea>
        </div>

        <div class="form-group">
            <label for="fund_goal">Fund Goal Amount:</label>
            <input 
            type="number" 
            class="form-control" 
            id="fund_goal" 
            name="fund_goal" 
            placeholder="Fund Goal Amount">
        </div>
        <div class="form-group">
            <label for="khalti_id">Khalti Id: </label>
            <input 
            type="number" 
            class="form-control" 
            id="khalti_id" 
            name="khalti_id" 
            placeholder="khalti id">
        </div>
        <div class="form-group">
            <label for="organization_contact">organization contact: </label>
            <input 
            type="number" 
            class="form-control" 
            id="organization_contact" 
            name="organization_contact" 
            placeholder="organization contact">
        </div>
        <div class="form-group">
            <label for="organization_address">organization address </label>
            <input 
            type="string" 
            class="form-control" 
            id="organization_address" 
            name="organization_address" 
            placeholder="organization address">
        </div>

        <div class="form-group">
            <label for="fund_end_date">Fund end date:</label>
            <input 
            type="date" 
            class="form-control" 
            id="fund_end_date" 
            name="fund_end_date" 
            placeholder="Fund End Date">
        </div>

        <div class="form-group">
            <label for="file">Cover Photo:</label>
            <input 
            type="file" 
            class="form-control" 
            id="file" 
            name="file" 
           >
        </div>

        

        <!-- <div class="form-group">
            <label for="semester">Project Image:</label>
            <input 
            type="file" 
            class="form-control"
             id="img" 
             name="image">
            <img src="#", id = "imgPreview" alt="">
        </div> -->

        <button type="submit" class="btn btn-primary" name="action">Submit</button>
    </form>
    </div>
    
</body>

</html>