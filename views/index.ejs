        <div id="Project-container">
            <h2 style="font-weight: bold;">Our Projects</h2>
            <% projectList.forEach(function(project, i){ %>
            <div class="row"  
            ">
              
                <div class="column pro-image" style="width: 20%;" >
                  <div class ="image1" style=" padding-left: 15em;padding-right: 15em;padding-right: 15em;padding-right: 15em;max-width: 100%;
                  max-height: 20%;
                  display: block;
                  ">
                  <%if (project.file){%>
                    <img src="./uploads/<%= project.file %>" alt="Image" width="200">
                    <% } %>
                  </div>
                </div>
                <div class="column pro-details">
                    <h2 style="font-weight: bold;"><%= project.title %></h2>
                    <p><%= project.short_description %></p>
                    <p>Fund Goal: <%= project.fund_goal %></p>
                    <!-- <a href="/projects/loadmore/<%= project._id %>" >Load More</a> -->
                    
                     <a href="/projects/loadmore/<%= project._id %>" id="learn-more" style="border: 1px solid blue; text-align: center; color: blue;">Learn more..</a> 
                </div>
                
                
            </div>
            <br>
            <% } )%>
